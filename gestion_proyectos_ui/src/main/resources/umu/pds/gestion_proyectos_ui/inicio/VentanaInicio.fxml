<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           prefWidth="900.0"
           prefHeight="600.0"
           stylesheets="@/umu/pds/gestion_proyectos_ui/estilos/app2.css"
           styleClass="root">

    <VBox alignment="CENTER" spacing="30">

        <VBox alignment="CENTER" spacing="10">

		<StackPane prefWidth="70.0"
           		prefHeight="70.0"
          		 maxWidth="70.0"
          		 maxHeight="70.0"
           		styleClass="logo-box">

    		<SVGPath content="M3 3h18v18H3z M3 9h18 M9 9v12"
             		styleClass="logo-icon"/>
		</StackPane>

            <Label text="NextFlow Board"
                   styleClass="title"/>

            <Label text="Professional agile project management made simple."
                   wrapText="true"
                   styleClass="subtitle"/>

        </VBox>

        <VBox alignment="TOP_LEFT"
              spacing="15"
              maxWidth="420"
              styleClass="card">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Create your first board"
                   styleClass="card-title"/>

            <VBox spacing="5">
                <Label text="Board Name"/>
                <TextField promptText="Marketing Strategy..."/>
            </VBox>

            <VBox spacing="5">
                <Label text="Your Email"/>
                <TextField promptText="name@example.com"/>
            </VBox>

            <Button text="Launch Board"
                    maxWidth="Infinity"
                    styleClass="primary-button"/>

        </VBox>

        <HBox alignment="CENTER" spacing="15">
            <Label text="Simple" styleClass="footer-text"/>
            <Label text="•" styleClass="footer-text"/>
            <Label text="Fast" styleClass="footer-text"/>
            <Label text="•" styleClass="footer-text"/>
            <Label text="Collaborative" styleClass="footer-text"/>
        </HBox>

    </VBox>

</StackPane>